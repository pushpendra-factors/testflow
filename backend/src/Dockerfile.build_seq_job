FROM golang:1.11-alpine AS builder

WORKDIR /go/src/factors
ADD /factors .
RUN go build -o $GOPATH/bin/buildseqjob $GOPATH/src/factors/scripts/run_build_seq.go

# Create stripped down version without go and source code
FROM alpine:3.7
RUN apk update && apk add ca-certificates && rm -rf /var/cache/apk/*
COPY --from=builder /go/bin/buildseqjob /go/bin/buildseqjob
ENTRYPOINT ["/go/bin/buildseqjob"]