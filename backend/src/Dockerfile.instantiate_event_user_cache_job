FROM golang:1.14-alpine AS builder

WORKDIR /go/src/factors
ADD /factors .
RUN go build -o $GOPATH/bin/instantiate_event_user_cache $GOPATH/src/factors/migrations/scripts/run_instantiate_event_user_cache.go

# Create stripped down version without go and source code
FROM alpine:3.7
RUN apk update && apk add ca-certificates && rm -rf /var/cache/apk/*
COPY --from=builder /go/bin/instantiate_event_user_cache /go/bin/instantiate_event_user_cache
ENTRYPOINT ["/go/bin/instantiate_event_user_cache"]