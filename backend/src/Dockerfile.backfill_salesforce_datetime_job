FROM golang:1.14-alpine AS builder

WORKDIR /go/src/factors
ADD /factors .
RUN go build -o $GOPATH/bin/backfillsalesforcedatetime $GOPATH/src/factors/backend/src/factors/migrations/scripts/run_salesforce_backfill_datetime_properties/run_salesforce_backfill_datetime_properties.go

# Create stripped down version without go and source code
FROM alpine:3.7
RUN apk update && apk add ca-certificates && rm -rf /var/cache/apk/*
# Fixes: time.LoadLocation(ZONE_NAME) error, zoneinfo.zip no such file or directory.
ADD https://github.com/golang/go/raw/master/lib/time/zoneinfo.zip /usr/local/go/lib/time/zoneinfo.zip
COPY --from=builder /go/bin/backfillsalesforcedatetime /go/bin/backfillsalesforcedatetime
ENTRYPOINT ["/go/bin/backfillsalesforcedatetime"]
